{
  "name": "typescript-backend",
  "version": "1.0.0",
  "description": "Boilerplate for back end typescript projects",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha test/unit/**/*.test.ts",
    "unit": "nyc mocha test/unit/**/*.test.ts",
    "build": "tsc"
  },
  "keywords": [
    "typescript",
    "boilderplate",
    "nodejs"
  ],
  "author": "Jared Chmielecki",
  "license": "ISC",
  "dependencies": {
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.4.7",
    "@types/sinon": "^4.3.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^4.4.6",
    "source-map-support": "^0.5.4",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
